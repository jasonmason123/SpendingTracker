@page
@using Microsoft.Extensions.Localization
@using SpendingTracker_API.Resources.Pages.Index
@inject IStringLocalizer<IndexPageResources> Localizer
@model SpendingTracker_API.Pages.IndexModel
@{
    ViewData["Title"] = "Spending Tracker API";
}

<div class="container py-5">
    <h1 class="mb-3">@Localizer["Welcome"]</h1>
    <p class="lead">@Localizer["WelcomeSubtitle"] <em>Bui Minh Son</em>.</p>
    <p>@Localizer["WelcomeSmallSubtitle"]</p>

    <h4>@Localizer["ImplementedFeatures"]</h4>
    <ul class="list-group mb-4">
        <li class="list-group-item">@Localizer["AuthenticationFeature"]</li>
        <li class="list-group-item">@Localizer["TransactionCrudFeature"]</li>
    </ul>

    <p>@Localizer["ClientSupport"]</p>
    <p>
        <a href="/app" class="btn btn-primary" target="_blank">
            @Localizer["ToWeb"]
        </a>
    </p>

    <h2 class="mt-5 mb-3">@Localizer["MobileSnapshot"]</h2>
    <div class="container py-3">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-6 g-3">
            @foreach (var item in new[] {
                new { Title = Localizer["LoginImgTitle"].Value, ImageUrl = "/images/login.png" },
                new { Title = Localizer["HomeImgTitle"].Value, ImageUrl = "/images/home.png" },
                new { Title = Localizer["TransactionsImgTitle"].Value, ImageUrl = "/images/transactions.png" },
                new { Title = Localizer["TransactionAddImgTitle"].Value, ImageUrl = "/images/transactions_with_add_button.png" },
                new { Title = Localizer["TransactionDetailsImgTitle"].Value, ImageUrl = "/images/transaction_details_with_edit_and_delete_button.png" },
                new { Title = Localizer["StatisticsImgTitle"].Value, ImageUrl = "/images/statistics.png" },
                new { Title = Localizer["SettingsImgTitle"].Value, ImageUrl = "/images/settings.png" },
            })
            {
                <div class="col">
                    <div class="card h-100 text-center shadow-sm border-0">
                        <a href="@item.ImageUrl" target="_blank" class="d-block p-2">
                            <img src="@item.ImageUrl" class="card-img-top rounded" alt="@item.Title" style="object-fit: contain;" />
                        </a>
                        <div class="card-body p-2">
                            <p class="card-text small">@item.Title</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="mt-5">
        <p><strong>GitHub:</strong></p>
        <a href="https://github.com/jasonmason123/SpendingTracker" target="_blank" class="link-primary">
            https://github.com/jasonmason123/SpendingTracker
        </a>
    </div>

    <p class="mt-4">@Localizer["NiceDay"] ❤️</p>
</div>